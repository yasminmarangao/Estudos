algoritmo "Exerc.28"
var
    num1, num2, num3: inteiro
inicio
    escreva("Digite o primeiro número: ")
    leia(num1)
    limpatela()
    escreva("Digite o segundo número: ")
    leia(num2)
    limpatela()
    escreva("Digite o terceiro número: ")
    leia(num3)
    limpatela()
    escreva("A soma dos quadrados dos números lidos é: ", ((num1^2)+(num2^2)+(num3^2)))
fimalgoritmo

