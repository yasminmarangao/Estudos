algoritmo "Exerc.03"
var
    num1, num2, num3: inteiro
inicio
    escreva("Escolha o primeiro número: ")
    leia(num1)
    escreva("Escolha o segundo número: ")
    leia(num2)
    escreva("Escolha o terceiro número: ")
    leia(num3)
    limpatela()
    escreva("A soma dos três números foi: ", num1+num2+num3)
fimalgoritmo
