algoritmo "Algoritmo12"
var
   cont, dolar, reais: real
inicio
   cont <- 0
   enquanto cont < 4 faca
      cont <- cont + 1
      
      escreva("Digite o valor da moeda em reais: ")
      leia(reais)

      dolar <- reais / 2.2
      escreval("O valor de real para dolar eh: ", dolar)
   fimenquanto
fimalgoritmo
