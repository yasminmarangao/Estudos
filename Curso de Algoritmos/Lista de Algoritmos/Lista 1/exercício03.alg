algoritmo "Algoritmo3"
var
   numero1, numero2, numero3: inteiro
   soma: inteiro
inicio
      escreva("digite o primeiro numero: ")
      leia(numero1)
      escreva("digite o segundo numero: ")
      leia(numero2)
      escreva("digite o terceiro numero: ")
      leia(numero3)
      soma <- numero1 + numero2 + numero3
      escreval("a soma eh:", soma)
fimalgoritmo
